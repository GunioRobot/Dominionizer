<phone:PhoneApplicationPage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:ic="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
                            xmlns:Custom="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                            xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
                            xmlns:local="clr-namespace:Dominionizer.ViewModels"
                            xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
                            xmlns:ViewModels="clr-namespace:Dominionizer.ViewModels"
                            x:Class="Dominionizer.CardListPage"
                            DataContext="{Binding Path=CardListViewModel, Source={StaticResource Locator}}"
                            SupportedOrientations="Portrait"
                            Orientation="Portrait"
                            mc:Ignorable="d"
                            shell:SystemTray.IsVisible="True"
                            d:DesignHeight="696"
                            d:DesignWidth="480">

    <phone:PhoneApplicationPage.Resources>

        <DataTemplate x:Name="CardsListBoxItemTemplate">
            <Grid Margin="0,10,0,0"
                  MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <!-- Image, Title, Cost, Cost Image, Potions, Potions Image, Set -->
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <toolkit:ContextMenuService.ContextMenu>
                    <toolkit:ContextMenu x:Name="ItemContextMenu">
                        <toolkit:MenuItem x:Name="SwapCardMenuItem"
                                          Header="swap this card"
                                          Command="{Binding ElementName=CardsListBox,Path=DataContext.SwapCardCommand}"
                                          CommandParameter="{Binding}" />
                    </toolkit:ContextMenu>
                </toolkit:ContextMenuService.ContextMenu>

                <!-- Card Symbol -->
                <Image Width="15"
                       Height="15"
                       Margin="5,0,15,0"
                       Source="{Binding Converter={StaticResource CardTypeImageConverter}}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

                <!-- Card Name -->
                <TextBlock Grid.Column="1"
                           Width="250"
                           FontSize="24"
                           VerticalAlignment="Center"
                           Text="{Binding Name}" />

                <!-- Cost -->
                <TextBlock Style="{StaticResource PhoneTextNormalStyle}"
                           Text="{Binding Cost}"
                           Grid.Column="2"
                           HorizontalAlignment="Center"
                           FontSize="32"
                           VerticalAlignment="Center" />
                <Image Grid.Column="3"
                       Width="27"
                       Height="27"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Source="/Images/coin.png" />

                <!-- potions -->
                <TextBlock Style="{StaticResource PhoneTextNormalStyle}"
                           Text="{Binding PotionCost}"
                           HorizontalAlignment="Center"
                           FontSize="32"
                           Grid.Column="4"
                           VerticalAlignment="Center" />
                <Image Grid.Column="5"
                       Width="27"
                       Height="27"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Source="/Images/potion.png" />

                <!-- set -->
                <Image Grid.Column="6"
                       Width="27"
                       Height="27"
                       Margin="25,0,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Source="{Binding Set, Converter={StaticResource CardSetImageConverter}}" />

            </Grid>

        </DataTemplate>

    </phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid Background="Transparent">

        <Grid x:Name="CardsListDisplayArea">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding CardListName}"
                       FontSize="48"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="12,0,0,0" />

            <ListBox ItemsSource="{Binding Cards}"
                     Grid.Row="1"
                     x:Name="CardsListBox"
                     SelectedItem="{Binding SelectedCard, Mode=TwoWay}"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ItemTemplate="{StaticResource CardsListBoxItemTemplate}"
                     Margin="12,0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>

        </Grid>

        <Popup IsOpen="False"
               Margin="60,200"
               x:Name="SortOptionPopup">
            <Border BorderBrush="{StaticResource PhoneBackgroundBrush}"
                    Background="{StaticResource PhoneForegroundBrush}"
                    CornerRadius="24"
                    BorderThickness="2">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Select Sort Option"
                               Margin="20"
                               Foreground="{StaticResource PhoneAccentBrush}"
                               FontSize="32" />
                    <ListBox FontSize="38"
                             Grid.Row="1"
                             HorizontalAlignment="Center"
                             Foreground="{StaticResource PhoneBackgroundBrush}"
                             ItemsSource="{Binding SortStrategies}"
                             SelectedItem="{Binding SelectedSortStrategy, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Width="250"
                                           Text="{Binding SortField}"
                                           TextAlignment="Center" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Grid>
            </Border>
        </Popup>

    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsMenuEnabled="False">
            <shell:ApplicationBarIconButton x:Name="RefreshButton"
                                            Text="Refresh"
                                            IconUri="/Icons/dark/appbar.refresh.rest.png"
                                            Click="RefreshButton_Click" />
            <shell:ApplicationBarIconButton Text="Settings"
                                            IconUri="/Icons/dark/appbar.feature.settings.rest.png"
                                            x:Name="SettingsButton"
                                            Click="SettingsButton_Click" />
            <shell:ApplicationBarIconButton Text="Sort"
                                            IconUri="/Icons/appbar.download.rest.png"
                                            x:Name="SortButton"
                                            Click="SortButton_Click" />
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem x:Name="LoadCardList"
                                              Click="LoadCardList_Click"
                                              Text="Load Card List" />
                <shell:ApplicationBarMenuItem x:Name="SaveCardList"
                                              Click="SaveCardList_Click"
                                              Text="Save Card List" />
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>